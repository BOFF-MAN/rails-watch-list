<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8Y2luZW1hfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=800&q=60);">
  <div class="container">
    <h1>Awesome Movie Lists</h1>
    <p>By David</p>
    <%= link_to "Add a new list", new_list_path, class: "btn btn-gradient" %>
  </div>
</div>

<div class="cards">
  <% @lists.each do |list| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
      <%= link_to list.name, list_path(list) %>
    </div>
  <% end %>
    <div id="new-card" class="card-category">
        <%= link_to "Add a new list", new_list_path, class: "btn btn-ghost" %>
    </div>
</div>
